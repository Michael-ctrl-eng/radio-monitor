WEBSITE_BASE_URL=https://your-poc-website.com
LOGIN_URL_PATH=/login
STATUS_PAGE_PATH=/radio_status
SCRAPE_USERNAME=your_username
SCRAPE_PASSWORD=your_password

ALERT_ENABLED=true
ALERT_FAILURE_THRESHOLD=3
SMTP_SERVICE=gmail
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_gmail_app_password  # Use an App Password for Gmail!
ALERT_RECIPIENTS=admin@yourcompany.com,techsupport@yourcompany.com

# Data-Driven Alerts Configuration
SIGNAL_ALERT_ENABLED=true
SIGNAL_ALERT_THRESHOLD=-90 # dBm, Alert if signal strength is below -90 dBm
BATTERY_ALERT_ENABLED=true
BATTERY_ALERT_THRESHOLD=15 # %, Alert if battery level is below 15%


MIN_SIGNAL=-90 # dBm
MIN_BATTERY=15  # Percentage

MAX_RETRIES=5
INITIAL_RETRY_DELAY=5000
MAX_RETRY_DELAY=60000
RETRY_BACKOFF_FACTOR=2
REQUEST_TIMEOUT=30000
NAVIGATION_TIMEOUT=60000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
LOG_FILENAME_PREFIX=scrape-log-v3
HTML_FILENAME_PREFIX=html-response-v3
HEADLESS_BROWSER=true # Set to 'false' to run in non-headless mode
SCRAPE_INTERVAL=60000
